<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

<application>
    <resource-bundle>
        <base-name>br.com.fiap.prova.util.internacionalizar.labels</base-name>
        <var>label</var>
    </resource-bundle>
    
    
<!-- para testar os lebels em ingles 
    <locale-config>
        <default-locale>en</default-locale>
    </locale-config>-->
    
    
</application>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>adm</from-outcome>
            <to-view-id>/areaAdministrador.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>prof</from-outcome>
            <to-view-id>/areaProfessor.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>aluno</from-outcome>
            <to-view-id>/areaAluno.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
